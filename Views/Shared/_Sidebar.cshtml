<div class="wrapper">

	<!-- Main Sidebar Container -->
	<aside class="main-sidebar sidebar-dark-primary elevation-4" [hidden]="hideSidebar">
		<!-- Brand Logo -->
		<a href="Home" class="brand-link">
			<img src="~/Content/img/Bike.png" class="brand-image" style="opacity: .8">
			<span class="brand-text font-weight-light">Bike Store</span>
		</a>

		<!-- Sidebar -->
		<div class="sidebar">

			<!-- Sidebar user panel (optional) -->
			<div class="mt-3 mb-3 mr-1 ml-1 d-flex">
				<div class="image">
						<img src="~/Content/img/Logo.jpg" class="img-thumbnail img-rounded elevation-2">
				</div>
			</div>

			<!-- Sidebar Menu -->
			<nav class="mt-2">
				<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
					<!-- Add icons to the links using the .nav-icon class
					with font-awesome or any other icon font library -->

					<li class="nav-item">
						<a href="@Url.Action("Home", "Home")" class="nav-link">
							<i class="nav-icon fa fa-home"></i>
							<p>
								Home
							</p>
						</a>
					</li>

					<li class="nav-item">
						<a href="@Url.Action("Product", "Products")" class="nav-link">
							<i class="nav-icon fa fa-bicycle"></i>
							<p>
								All Products
							</p>
						</a>
					</li>


					<li class="nav-header">Management</li>
					<li class="nav-item">
						<a [routerLink]="['/dashboard']" class="nav-link">
							<i class="nav-icon fa fa-pie-chart"></i>
							<p>Dashboard</p>
						</a>
					</li>
				</ul>
			</nav>
			<!-- /.sidebar-menu -->
		</div>
		<!-- /.sidebar -->
	</aside>

</div>