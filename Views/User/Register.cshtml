
<div class="register-box">


	<!-- general form elements disabled -->
	<div class="card">

		<div class="card-header">
			<h3 class="card-title">Registeration Information</h3>
		</div>
		<!-- /.card-header -->


		<div class="card-body">
			<form role="form">



				<div class="row">
					<div class="col-sm-6">
						<!-- text input -->
						<div class="form-group">
							<label>Gender</label>
							<select class="form-control">
								<option>Male</option>
								<option>Female</option>
							</select>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label>Marital Status</label>
							<select class="form-control">
								<option>Single</option>
								<option>Married</option>
							</select>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6">
						<!-- textarea -->
						<div class="form-group">
							<label>Education</label>
							<select class="form-control">
								<option>Single</option>
								<option>Married</option>
							</select>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label>Occupation</label>
							<select class="form-control">
								<option>Male</option>
								<option>Female</option>
							</select>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-6">
						<!-- textarea -->
						<div class="form-group">
							<label>Home Owner</label>
							<select class="form-control">
								<option>Single</option>
								<option>Married</option>
							</select>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label>Commute Distance</label>
							<select class="form-control">
								<option>Male</option>
								<option>Female</option>
							</select>
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-sm-6">
						<!-- textarea -->
						<div class="form-group">
							<label>Region</label>
							<select class="form-control">
								<option>Single</option>
								<option>Married</option>
							</select>
						</div>
					</div>
				</div>

				<hr />

				<div class="row">
					<div class="col-sm-3">
						<!-- textarea -->
						<div class="form-group">
							<label>Cars</label>
							<input type="number" class="form-control" placeholder="Cars...">
						</div>
					</div>

					<div class="col-sm-3">
						<!-- textarea -->
						<div class="form-group">
							<label>Income</label>
							<input type="number" class="form-control" placeholder="Income...">
						</div>
					</div>

					<div class="col-sm-3">
						<!-- textarea -->
						<div class="form-group">
							<label>Children</label>
							<input type="number" class="form-control" placeholder="Children...">
						</div>
					</div>

					<div class="col-sm-3">
						<!-- textarea -->
						<div class="form-group">
							<label>Age</label>
							<input type="number" class="form-control" placeholder="Age...">
						</div>
					</div>
				</div>




				<hr />

				<div class="row">
					<div class="col-sm-6">
						<!-- text input -->
						<div class="form-group">
							<label>Email</label>
							<input type="text" class="form-control" placeholder="Email ...">
						</div>
					</div>
					<div class="col-sm-6">
						<div class="form-group">
							<label>Password</label>
							<input type="text" class="form-control" placeholder="Password ...">
						</div>
					</div>
				</div>

			</form>

			<div class="col-4 float-right mt-4">
				<button type="submit" class="btn btn-danger btn-block">Sign Up</button>
			</div>


		</div>
		<!-- Card Body -->


	</div>


</div>
<!-- Register Box -->
